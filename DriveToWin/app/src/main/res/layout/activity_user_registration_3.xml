<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ashwinkumar.drivetowin.user_registration_3">
    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/car_tag_text"
    android:hint="@string/car_tag"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="53dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/policy_num_text"
        android:hint="@string/policy_number"
        android:gravity="center"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/car_tag_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/car_tag_text"
        android:layout_alignEnd="@+id/car_tag_text" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/policy_claim_phone_text"
        android:hint="@string/claim_number"
        android:gravity="center"
        android:layout_below="@+id/policy_num_text"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/policy_num_text"
        android:layout_alignEnd="@+id/policy_num_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/terms_text"
        android:id="@+id/terms_text"
        android:gravity="center"
        android:layout_below="@+id/resigter_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_emergency_contact_btn"
        android:id="@+id/add_emergency_contact_btn"
        android:onClick="addEmergencyContacts"
        android:layout_below="@+id/terms_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignRight="@+id/terms_text"
        android:layout_alignEnd="@+id/terms_text" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_button_text"
        android:id="@+id/resigter_btn"
        android:layout_below="@+id/policy_claim_phone_text"
        android:layout_alignRight="@+id/terms_text"
        android:layout_alignEnd="@+id/terms_text"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="37dp"
        android:onClick="RegisterButtonPressed"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_btn_text"
        android:id="@+id/back_btn"
        android:onClick="BackButtonPressed"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignTop="@+id/resigter_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
