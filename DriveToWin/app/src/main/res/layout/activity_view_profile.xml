<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ashwinkumar.drivetowin.View_Profile">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/name_view_profile"
        android:gravity="center"
        android:id="@+id/name_lbl_view_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world"
        android:gravity="left"
        android:id="@+id/name_view_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/name_lbl_view_profile"
        android:layout_alignLeft="@+id/car_make_model_view_profile"
        android:layout_alignStart="@+id/car_make_model_view_profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/car_make_model_view_profile"
        android:gravity="center"
        android:id="@+id/car_make_model_lbl_view_profile"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/name_lbl_view_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world"
        android:gravity="left"
        android:id="@+id/car_make_model_view_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/car_make_model_lbl_view_profile"
        android:layout_toRightOf="@+id/car_make_model_lbl_view_profile"
        android:layout_toEndOf="@+id/car_make_model_lbl_view_profile"
        android:layout_marginLeft="23dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/vin_view_profile"
        android:gravity="center"
        android:id="@+id/vin_lbl_view_profile"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/car_make_model_lbl_view_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world"
        android:gravity="left"
        android:id="@+id/vin_view_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/vin_lbl_view_profile"
        android:layout_alignLeft="@+id/car_make_model_view_profile"
        android:layout_alignStart="@+id/car_make_model_view_profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/phone_num_view_profile"
        android:gravity="center"
        android:id="@+id/phone_num_lbl_view_profile"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/vin_lbl_view_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world"
        android:gravity="left"
        android:id="@+id/phone_num_view_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/phone_num_lbl_view_profile"
        android:layout_alignLeft="@+id/vin_view_profile"
        android:layout_alignStart="@+id/vin_view_profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email_view_profile"
        android:gravity="center"
        android:id="@+id/email_lbl_view_profile"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/phone_num_lbl_view_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hello_world"
        android:gravity="left"
        android:id="@+id/email_view_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/email_lbl_view_profile"
        android:layout_alignLeft="@+id/vin_view_profile"
        android:layout_alignStart="@+id/vin_view_profile" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_pwd"
        android:id="@+id/change_pwd_btn"
        android:layout_below="@+id/email_view_profile"
        android:layout_marginTop="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ChangePasswordButtonPressed"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deactivate_Account"
        android:id="@+id/deactivate_Account_btn"
        android:layout_below="@+id/change_pwd_btn"
        android:layout_marginTop="33dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="DeactivateAccountBtnPressed"/>
</RelativeLayout>
